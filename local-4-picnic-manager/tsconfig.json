{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./assets/src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["assets/src/**/*"],
  "exclude": ["node_modules", "assets/build"]
}
